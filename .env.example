# ARA v2 Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_APP=ara_v2.app:create_app
FLASK_ENV=development  # development, production
DEBUG=true
SECRET_KEY=your-secret-key-change-this-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ara_v2
# For Replit: postgresql://user:password@db.host.replit.dev:5432/ara_v2

# Redis
REDIS_URL=redis://localhost:6379/0
# For Replit: redis://default:password@redis.host.replit.dev:6379

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRY_HOURS=24
JWT_REFRESH_TOKEN_EXPIRY_DAYS=30

# Claude API Configuration
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Claude API Budget Controls
CLAUDE_DAILY_BUDGET=5.00
CLAUDE_MONTHLY_BUDGET=100.00
CLAUDE_MAX_CALLS_PER_MIN=10
CLAUDE_MAX_CALLS_PER_HOUR=200

# External API Keys
SEMANTIC_SCHOLAR_API_KEY=  # Optional: for higher rate limits
CROSSREF_EMAIL=your-email@example.com  # Required for polite pool

# SerpAPI (Google Scholar)
# SerpAPI handles all anti-scraping, proxy rotation, and CAPTCHA automatically
# Sign up at https://serpapi.com/ - Free tier: 100 searches/month
# Paid plans start at $50/month for 5,000 searches
SERPAPI_API_KEY=your_serpapi_key_here

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=1000 per day;100 per hour

# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FIELD_ENCRYPTION_KEY=

# Gov Dash Integration
GOV_DASH_API_KEYS=key1,key2,key3  # Comma-separated list

# Application Settings
MAX_PAPERS_PER_SEARCH=100
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Celery (Task Queue)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/ara_v2.log

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000  # Comma-separated

# Monitoring
ENABLE_PROMETHEUS_METRICS=true

# Email (for notifications - Phase 2+)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@ara.example.com
