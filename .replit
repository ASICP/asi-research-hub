run = "python app.py"
modules = ["python-3.10", "postgresql-16"]

[nix]
channel = "stable-23_11"
packages = ["redis"]

[env]
PYTHONPATH = "$PYTHONPATH:$REPL_HOME"
REPLIT_KEEP_PACKAGE_DEV_DEPENDENCIES = "1"

[deployment]
run = ["sh", "-c", "gunicorn -w 4 -b 0.0.0.0:$PORT app:app"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6000
externalPort = 6000
exposeLocalhost = true

[[ports]]
localPort = 6379
externalPort = 3001

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ASI Research Hub"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Redis Server"

[[workflows.workflow]]
name = "ASI Research Hub"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Redis Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "redis-server --bind 127.0.0.1 --port 6000"

[userenv]

[userenv.shared]
FRONTEND_URL = "https://hubt1.asi2.org"
REDIS_URL = "redis://127.0.0.1:6000/0"
RATELIMIT_STORAGE_URL = "redis://127.0.0.1:6000/0"
