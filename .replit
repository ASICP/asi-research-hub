run = "python app.py"
modules = ["python-3.10", "postgresql-16"]

[nix]
channel = "stable-23_11"

[env]
PYTHONPATH = "$PYTHONPATH:$REPL_HOME"

[deployment]
run = ["sh", "-c", "gunicorn -w 4 -b 0.0.0.0:$PORT app:app"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33441
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ASI Research Hub"

[[workflows.workflow]]
name = "ASI Research Hub"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
