# ASI Research Hub Environment Variables
# Copy this file to .env and fill in your values

# Flask Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-me-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-me-in-production

# SendGrid Email Service (Get free API key at sendgrid.com)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Frontend URL (for CORS and email links)
FRONTEND_URL=https://asi2.org

# Perplexity API (Optional - for Version 2)
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# Port (Replit will set this automatically)
PORT=5000
