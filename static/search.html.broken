        async function loadPapersByTag(tag, event) {
            event.stopPropagation(); // Prevent modal from closing

            const container = document.getElementById('references-list');
            container.innerHTML = '<div class="no-references">Loading papers with tag: ' + tag + '...</div>';

            try {
                const response = await fetch(`${API_URL}/papers/search`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${accessToken}`
                    },
                    body: JSON.stringify({
                        query: tag,
                        sources: ['internal'],
                        tags: [tag]
                    })
                });

                if (response.ok) {
                    const data = await response.json();
                    // Filter out the current paper
                    const currentPaperId = window.currentPaper?.id;
                    const filteredPapers = data.papers.filter(p => p.id !== currentPaperId).slice(0, 5);
                    displayReferences(filteredPapers);
                } else {
                    displayReferences([]);
                }
            } catch (error) {
                console.error('Error loading papers by tag:', error);
                displayReferences([]);
            }
        }

        async function loadReferences(paperId) {
            const container = document.getElementById('references-list');
            container.innerHTML = '<div class="no-references">Loading...</div>';

            try {
                const response = await fetch(`${API_URL}/papers/${paperId}/references`, {
                    headers: {
                        'Authorization': `Bearer ${accessToken}`
                    }
                });

                if (response.ok) {
                    const data = await response.json();
                    displayReferences(data.references || []);
                } else {
                    // If endpoint doesn't exist or fails, show placeholder
                    displayReferences([]);
                }
            } catch (error) {
                // Show placeholder for now
                displayReferences([]);
            }
        }

        function displayReferences(references) {
            const container = document.getElementById('references-list');

            if (!references || references.length === 0) {
                container.innerHTML = '<div class="no-references" style="text-align: center; padding: 30px 10px; line-height: 1.6;">üëá<br><br>CLICK A TAG BELOW TO VIEW RELATED PAPERS</div>';
                return;
            }

            let html = '';
            references.forEach((ref, index) => {
                const snippet = ref.abstract ? ref.abstract.substring(0, 100) + '...' : 'No abstract available.';

                // Build reference link
                let refLink = '';
                if (ref.arxiv_id) {
                    refLink = `<a href="https://arxiv.org/abs/${ref.arxiv_id}" target="_blank" style="font-size: 11px; color: var(--accent-primary); text-decoration: none; margin-top: 6px; display: inline-block;" data-external-link>üîó View Paper</a>`;
                } else if (ref.doi) {
                    refLink = `<a href="https://doi.org/${ref.doi}" target="_blank" style="font-size: 11px; color: var(--accent-primary); text-decoration: none; margin-top: 6px; display: inline-block;" data-external-link>üîó View Paper</a>`;
                } else if (ref.pdf_url) {
                    refLink = `<a href="${ref.pdf_url}" target="_blank" style="font-size: 11px; color: var(--accent-primary); text-decoration: none; margin-top: 6px; display: inline-block;" data-external-link>üîó View Paper</a>`;
                } else if (ref.url) {
                    refLink = `<a href="${ref.url}" target="_blank" style="font-size: 11px; color: var(--accent-primary); text-decoration: none; margin-top: 6px; display: inline-block;" data-external-link>üîó View Paper</a>`;
                }

                // Create proper paper key for clicking
                const paperKey = ref.id ? `internal_${ref.id}` : `${ref.source}_${ref.source_id}`;

                html += `
                    <div class="reference-item" data-ref-index="${index}">
                        <div class="reference-title">${ref.title}</div>
                        <div class="reference-meta">${ref.authors || 'Unknown'} ‚Ä¢ ${ref.year || 'N/A'}</div>
                        <div class="reference-snippet">${snippet}</div>
                        ${refLink}
                    </div>
                `;
            });
            container.innerHTML = html;

            // Add click event listeners - capture ref data in closure
            container.querySelectorAll('.reference-item').forEach((item, idx) => {
                const ref = references[idx]; // Capture reference in closure
                item.addEventListener('click', function (e) {
                    if (e.target.hasAttribute('data-external-link')) return;
                    if (ref) {
                        showPaperModal(ref);
                    }
                });
            });
        }

