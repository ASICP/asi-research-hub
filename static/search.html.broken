    <script>
        const API_URL = window.location.origin + '/api';
        let accessToken = localStorage.getItem('access_token');

        // Theme management
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            const button = document.querySelector('.theme-toggle');

            html.setAttribute('data-theme', newTheme);
            button.textContent = newTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
            localStorage.setItem('theme', newTheme);
        }

        // Load saved theme
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme') || 'dark';
            const button = document.querySelector('.theme-toggle');
            document.documentElement.setAttribute('data-theme', savedTheme);
            button.textContent = savedTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
        });

        // Logout function
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                localStorage.removeItem('access_token');
                localStorage.removeItem('user_email');
                window.location.href = '/static/login.html';
            }
        }

        async function search() {
            if (!accessToken) {
                showError('Please log in first. Redirecting to login...');
                setTimeout(() => window.location.href = '/static/login.html', 2000);
                return;
            }

            const query = document.getElementById('search-query').value.trim();
            if (!query) {
                showError('Please enter a search query');
                return;
            }

            const selectedSource = document.querySelector('input[name="source"]:checked')?.value;
            const sources = [selectedSource || 'internal'];

            showLoading();

            try {
                const response = await fetch(`${API_URL}/papers/search`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${accessToken}`
                    },
                    body: JSON.stringify({ query, sources })
                });

                const data = await response.json();

                if (response.ok) {
                    displayResults(data);
                } else {
                    if (response.status === 401) {
                        showError('Session expired. Please log in again.');
                        localStorage.removeItem('access_token');
                        setTimeout(() => window.location.href = '/static/login.html', 2000);
                    } else {
                        showError(data.error || 'Search failed');
                    }
                }
            } catch (error) {
                showError('Network error: ' + error.message);
            }
        }

        function displayResults(data) {
            // Store results for modal access
            window.lastSearchResults = data;

            const container = document.getElementById('results-container');
            container.innerHTML = '';  // Clear container first

            if (data.total_count === 0) {
                container.innerHTML = `
                    <div class="status-message status-error">
                        No papers found. Try different keywords or sources.
                    </div>
                `;
                return;
            }

            let html = `
                <div class="status-message status-success">
                    ‚úÖ Found ${data.total_count} papers (${data.execution_time}s)
                </div>
                <div class="results">
            `;

            const uniquePapers = {};
            data.papers.forEach(paper => {
                const key = `${paper.title}-${paper.source}`;
                if (!uniquePapers[key]) {
                    uniquePapers[key] = paper;
                }
            });

            // Convert to array for processing
            const papersArray = Object.values(uniquePapers);
            // Store for access via onclick
            window.currentPapersArray = papersArray;

            papersArray.forEach((paper, index) => {
                html += `
                    <div class="result-card" onclick="viewPaperByIndex(${index})">
                        <div class="result-title">${paper.title}</div>
                        <div class="result-meta">${paper.authors} ‚Ä¢ ${paper.year}</div>
                        <div class="result-badges">
                            ${paper.asip_funded ? '<span class="badge badge-featured">ASI Featured</span>' : ''}
                            ${paper.arxiv_id ? `<a href="https://arxiv.org/abs/${paper.arxiv_id}" target="_blank" class="badge badge-link" onclick="event.stopPropagation()">üìÑ arXiv</a>` : ''}
                            ${paper.doi ? `<a href="https://doi.org/${paper.doi}" target="_blank" class="badge badge-link" onclick="event.stopPropagation()">üîó DOI</a>` : ''}
                        </div>
                    </div>
                `;
            });

            html += '</div>';
            container.innerHTML = html;
        }

        function viewPaperByIndex(index) {
            const paper = window.currentPapersArray?.[index];
            if (paper) {
                showPaperModal(paper);
            } else {
                alert('Paper not found.');
            }
        }


        function viewPaper(paperKey) {
            // Find the paper in the last search results
            // paperKey format: 'internal_ID' for database papers or 'SOURCE_SOURCE_ID' for external papers
            let paper;
            if (paperKey.startsWith('internal_')) {
                const paperId = parseInt(paperKey.substring(9));
                paper = window.lastSearchResults?.papers.find(p => p.id === paperId);
            } else {
                const [source, ...sourceParts] = paperKey.split('_');
                const sourceId = sourceParts.join('_');
                // Try to find paper with exact match
                paper = window.lastSearchResults?.papers.find(p => p.source === source && p.source_id === sourceId);

                // If not found, try case-insensitive source match (e.g., 'google_scholar' vs 'Google Scholar')
                if (!paper) {
                    paper = window.lastSearchResults?.papers.find(p =>
                        p.source?.toLowerCase() === source.toLowerCase() && p.source_id === sourceId
                    );
                }
            }
        }

        // Show paper modal with given paper object
        function showPaperModal(paper) {
            if (!paper) {
                alert('Paper not found. Please try searching again.');
                return;
            }

            // Store current paper for keyword highlighting
            window.currentPaper = paper;

            // Populate modal
            document.getElementById('modal-title').textContent = paper.title;

            // Meta information
            let metaHTML = '';
            if (paper.authors) {
                metaHTML += `
                    <div class="paper-meta-item">
                        <div class="paper-meta-label">Authors:</div>
                        <div class="paper-meta-value">${paper.authors}</div>
                    </div>
                `;
            }
            if (paper.year) {
                metaHTML += `
                    <div class="paper-meta-item">
                        <div class="paper-meta-label">Year:</div>
                        <div class="paper-meta-value">${paper.year}</div>
                    </div>
                `;
            }
            if (paper.venue) {
                metaHTML += `
                    <div class="paper-meta-item">
                        <div class="paper-meta-label">Venue:</div>
                        <div class="paper-meta-value">${paper.venue}</div>
                    </div>
                `;
            }
            if (paper.citation_count) {
                metaHTML += `
                    <div class="paper-meta-item">
                        <div class="paper-meta-label">Citations:</div>
                        <div class="paper-meta-value">${paper.citation_count}</div>
                    </div>
                `;
            }
            document.getElementById('paper-meta').innerHTML = metaHTML;

            // Abstract
            document.getElementById('paper-abstract').innerHTML = paper.abstract || 'No abstract available.';

            // Links with Explore Paper button
            let linksHTML = '';
            if (paper.arxiv_id) {
                linksHTML += `<a href="https://arxiv.org/abs/${paper.arxiv_id}" target="_blank" class="paper-link-btn">üìÑ View on arXiv</a>`;
            }
            if (paper.doi) {
                linksHTML += `<a href="https://doi.org/${paper.doi}" target="_blank" class="paper-link-btn">üîó View DOI</a>`;
            }

            // Explore Paper button - for Google Scholar, use the URL; otherwise use PDF
            let exploreUrl = null;
            if (paper.source === 'google_scholar' && paper.url) {
                exploreUrl = paper.url;
            } else {
                exploreUrl = paper.pdf_url || paper.url || (paper.arxiv_id ? `https://arxiv.org/pdf/${paper.arxiv_id}.pdf` : null);
            }

            if (exploreUrl) {
                linksHTML += `<a href="${exploreUrl}" target="_blank" class="paper-link-btn" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">üî¨ Explore Paper</a>`;
            }

            document.getElementById('paper-links').innerHTML = linksHTML;

            // Tags - make them clickable
            let tagsHTML = '';
            if (paper.tags && paper.tags.length > 0) {
                paper.tags.forEach(tag => {
                    tagsHTML += `<span class="tag" onclick="loadPapersByTag('${tag.replace(/'/g, "\\'")}', event)">${tag}</span>`;
                });
            }
            if (paper.asip_funded) {
                tagsHTML += `<span class="tag" style="background: rgba(102, 126, 234, 0.2); color: var(--accent-primary); border-color: var(--accent-primary);">‚≠ê ASI Featured</span>`;
            }
            document.getElementById('paper-tags').innerHTML = tagsHTML;

            // For Google Scholar papers, auto-load related papers from Internal Database
            if (paper.source === 'google_scholar' || !paper.id) {
                loadRelatedPapersForGoogleScholar(paper.title);
            } else {
                // For Internal Database papers, show placeholder
                displayReferences([]);
            }

            // Show modal
            document.getElementById('paper-modal').style.display = 'block';
        }

        async function loadRelatedPapersForGoogleScholar(title) {
            const container = document.getElementById('references-list');
            container.innerHTML = '<div class="no-references">Loading related papers...</div>';

            try {
                const response = await fetch(`${API_URL}/papers/search`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${accessToken}`
                    },
                    body: JSON.stringify({
                        query: title,
                        sources: ['internal']
                    })
                });

                if (response.ok) {
                    const data = await response.json();
                    const relatedPapers = data.papers || [];

                    if (relatedPapers.length > 0) {
                        displayReferences(relatedPapers.slice(0, 5));
                    } else {
                        container.innerHTML = '<div class="no-references">No related papers found in Internal Database</div>';
                    }
                } else {
                    container.innerHTML = '<div class="no-references">No related papers found in Internal Database</div>';
                }
            } catch (error) {
                console.error('Error loading related papers:', error);
                container.innerHTML = '<div class="no-references">No related papers found in Internal Database</div>';
            }
        }

