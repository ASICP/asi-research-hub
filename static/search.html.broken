        // Metrics & NotebookLM Logic
        async function loadMetrics() {
            try {
                const response = await fetch(`${API_URL}/metrics/dashboard`);
                if (!response.ok) throw new Error('Failed to load metrics');
                const data = await response.json();

                // Render Top Tags
                const tagsList = document.getElementById('top-tags-list');
                if (data.top_tags && data.top_tags.length > 0) {
                    tagsList.innerHTML = data.top_tags.map(t =>
                        `<li class="metric-item">
                            <span>#${t.name}</span> 
                            <span class="metric-score">${t.frequency}</span>
                        </li>`
                    ).join('');
                } else {
                    tagsList.innerHTML = '<li class="metric-item" style="justify-content:center">No data yet</li>';
                }

                // Render Top Cited
                const citedList = document.getElementById('top-citations-list');
                if (data.top_cited_papers && data.top_cited_papers.length > 0) {
                    citedList.innerHTML = data.top_cited_papers.map(p =>
                        `<li class="metric-item" style="display:block; cursor:pointer" onclick="viewPaperById('${p.id}'); return false;"> <!-- Opens modal -->
                            <div style="font-weight:500; margin-bottom:4px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; color:var(--accent-primary)">${p.title}</div>
                            <div style="display:flex; justify-content:space-between; font-size:11px; color:var(--text-tertiary)">
                                <span>${p.year || 'N/A'}</span>
                                <span style="color:var(--text-secondary)">${p.citations} citations</span>
                            </div>
                        </li>`
                    ).join('');
                } else {
                    citedList.innerHTML = '<li class="metric-item" style="justify-content:center">No citations yet</li>';
                }
                  // Render Novel Ideas (now shows top scored papers)
                  const novelList = document.getElementById('novel-ideas-list');
                  if (data.novel_ideas && data.novel_ideas.length > 0) {
                      novelList.innerHTML = data.novel_ideas.map(n =>
                          `<li class="metric-item">
                              <span title="${n.title}" style="flex: 1; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">${n.title.substring(0, 60)}${n.title.length > 60 ? '...' : ''}</span>
                              <span class="metric-score" title="Novelty Score: R:${n.breakdown.recency} I:${n.breakdown.interdisciplinary} T:${n.breakdown.tooling} C:${n.breakdown.contrarian} Impact:${n.breakdown.impact}">${n.score} pts</span>
                          </li>`
                      ).join('');
                  } else {
                      novelList.innerHTML = '<li class="metric-item" style="justify-content:center">No novel ideas found</li>';
                  // Render Pie Charts
                  renderTagsChart(data.top_tags);
                  renderCitationsChart(data.top_cited_papers);
                  }














            } catch (e) {
                console.error("Failed to load metrics", e);
                // Show error state in all three boxes
                document.getElementById('top-tags-list').innerHTML =
                    '<li class="metric-item" style="justify-content:center; color: var(--text-tertiary);">Unable to load</li>';
                document.getElementById('top-citations-list').innerHTML =
                    '<li class="metric-item" style="justify-content:center; color: var(--text-tertiary);">Unable to load</li>';
                document.getElementById('novel-ideas-list').innerHTML =
                    '<li class="metric-item" style="justify-content:center; color: var(--text-tertiary);">Unable to load</li>';
            }
        }
  
          // Chart rendering functions
          let tagsChart = null;
          let citationsChart = null;
  
          function renderTagsChart(tags) {
              const canvas = document.getElementById('tags-chart');
              if (!canvas) return;
  
              if (tagsChart) tagsChart.destroy();
  
              const ctx = canvas.getContext('2d');
              tagsChart = new Chart(ctx, {
                  type: 'pie',
                  data: {
                      labels: tags.map(t => t.name),
                      datasets: [{
                          data: tags.map(t => t.frequency),
                          backgroundColor: ['#3b82f6', '#8b5cf6', '#ec4899', '#f59e0b', '#10b981', '#6366f1', '#ef4444', '#14b8a6', '#f97316', '#a855f7']
                      }]
                  },
                  options: {
                      responsive: true,
                      maintainAspectRatio: true,
                      plugins: {
                          legend: { display: false }
                      }
                  }
              });
          }
  
          function renderCitationsChart(papers) {
              const canvas = document.getElementById('citations-chart');
              if (!canvas) return;
  
              if (citationsChart) citationsChart.destroy();
  
              const ctx = canvas.getContext('2d');
              citationsChart = new Chart(ctx, {
                  type: 'pie',
                  data: {
                      labels: papers.map(p => p.title.substring(0, 30) + '...'),
                      datasets: [{
                          data: papers.map(p => p.citations),
                          backgroundColor: ['#3b82f6', '#8b5cf6', '#ec4899', '#f59e0b', '#10b981']
                      }]
                  },
                  options: {
                      responsive: true,
                      maintainAspectRatio: true,
                      plugins: {
                          legend: { display: false }
                      }
                  }
              });
          }

        function checkNotebookLMAccess() {
            const email = localStorage.getItem('user_email');
            const gmailContainer = document.getElementById('notebook-lm-gmail');
            const nonGmailContainer = document.getElementById('notebook-lm-non-gmail');

            if (email) {
                // Check if Gmail user
                if (email.toLowerCase().endsWith('@gmail.com') || email.toLowerCase().endsWith('@googlemail.com')) {
                    gmailContainer.style.display = 'block';
                    nonGmailContainer.style.display = 'none';
                } else {
                    // Non-Gmail user (still logged in)
                    gmailContainer.style.display = 'none';
                    nonGmailContainer.style.display = 'block';
                }
            } else {
                // Not logged in - hide both
                gmailContainer.style.display = 'none';
                nonGmailContainer.style.display = 'none';
            }
        }

        // Initialize Metrics
        document.addEventListener('DOMContentLoaded', () => {
            loadMetrics();
            checkNotebookLMAccess();
        });
    </script>
